<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccount"
    android:backgroundTint="@color/teal_700">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/teal_700">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/photo1"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="131dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="130dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:hint="Jhone Smith"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:padding="15dp">

            <!---Show Name-->

            <ImageView
                android:id="@+id/ic_dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_dp" />

            <TextView
                android:id="@+id/textview_show_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_dp"
                android:layout_marginStart="50dp"
                android:hint="Jhone Smith"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_name"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/textview_show_full_name"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray" />

            <!---Show email-->

            <ImageView
                android:id="@+id/ic_email"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_name"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_email" />

            <TextView
                android:id="@+id/textview_show_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_name"
                android:layout_alignStart="@id/ic_email"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="jone@gmail.com"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_email"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/textview_show_email"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray" />


            <!---Show phone_numebr-->

            <ImageView
                android:id="@+id/ic_phone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_email"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_phone" />

            <TextView
                android:id="@+id/textview_show_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_email"
                android:layout_alignStart="@id/ic_phone"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="07X-XXXXXXX"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_phone"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/textview_show_email"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray" />

            <!---Show Password-->

            <ImageView
                android:id="@+id/ic_key"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/divider_phone"
                android:layout_marginTop="90dp"
                android:background="@drawable/ic_key" />

            <TextView
                android:id="@+id/textview_show_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_phone"
                android:layout_alignStart="@+id/ic_key"
                android:layout_marginStart="50dp"
                android:layout_marginTop="90dp"
                android:hint="**********"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_password"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/textview_show_phone"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/back_btn"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_marginTop="300dp"
                android:gravity="center"
                android:orientation="vertical"
                android:text="Back"
                android:layout_marginLeft="70dp"/>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>






